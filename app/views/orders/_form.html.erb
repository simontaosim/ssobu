<%= form_for @order, :html => { :class => "form-horizontal order" } do |f| %>

    <% if @order.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @order.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%= error_span(@order[:user_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :post_address_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :post_address_id, :class => 'form-control' %>
    </div>
    <%= error_span(@order[:post_address_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :receiver_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :receiver_name, :class => 'form-control' %>
    </div>
    <%= error_span(@order[:receiver_name]) %>
  </div>
  <div class="control-group">
    <%= f.label :receiver_mobile, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :receiver_mobile, :class => 'form-control' %>
    </div>
    <%= error_span(@order[:receiver_mobile]) %>
  </div>
  <div class="control-group">
    <%= f.label :receiver_address, :class => 'control-label' %>

<%- model_class = Order -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @order.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:post_address_id) %>:</strong></dt>
  <dd><%= @order.post_address_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:receiver_name) %>:</strong></dt>
  <dd><%= @order.receiver_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:receiver_mobile) %>:</strong></dt>
  <dd><%= @order.receiver_mobile %></dd>
  <dt><strong><%= model_class.human_attribute_name(:receiver_address) %>:</strong></dt>
  <dd><%= @order.receiver_address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:receiver_postcode) %>:</strong></dt>
  <dd><%= @order.receiver_postcode %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @order.amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_paid) %>:</strong></dt>
  <dd><%= @order.is_paid %></dd>
  <dt><strong><%= model_class.human_attribute_name(:delivery_company) %>:</strong></dt>
  <dd><%= @order.delivery_company %></dd>
  <dt><strong><%= model_class.human_attribute_name(:delivery_number) %>:</strong></dt>
  <dd><%= @order.delivery_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:delivery_time) %>:</strong></dt>
  <dd><%= @order.delivery_time %></dd>

</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              orders_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_order_path(@order), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              order_path(@order),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

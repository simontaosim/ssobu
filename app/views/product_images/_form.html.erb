<%= form_for @product_image, :html => { :class => "form-horizontal product_image" } do |f| %>

    <% if @product_image.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@product_image.errors.count, "error") %> prohibited this product_image from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @product_image.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :product_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :product_id, :class => 'form-control' %>
    </div>
    <%= error_span(@product_image[:product_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@product_image[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :is_cover, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :is_cover, :class => 'form-control' %>
    </div>
    <%= error_span(@product_image[:is_cover]) %>
  </div>
  <div class="control-group">
    <%= f.label :url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :url, :class => 'form-control' %>
    </div>
    <%= error_span(@product_image[:url]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            product_images_path, :class => 'btn btn-default' %>

<% end %>

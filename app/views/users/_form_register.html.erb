<%= form_for @user, url: users_register_path, :html => { :class => "form-horizontal user" } do |f| %>

    <% if @user.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@user.errors.count, "error") %> 请完善下面的数据:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :邮箱, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
    <%= error_span(@user[:email]) %>
  </div>
  
  <div class="control-group">
    <%= f.label :用户名, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :username, :class => 'form-control' %>
    </div>
    <%= error_span(@user[:username]) %>
  </div>
  <div class="control-group">
    <%= f.label :密码, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :password, :class => 'form-control' %>
    </div>
    <%= error_span(@user[:password]) %>
  </div>
  <div class="control-group">
    <%= f.label :密码确认, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :password_confirm, :class => 'form-control' %>
    </div>
    <%= error_span(@user[:password_confirm]) %>
  </div>

  <%= f.submit '同意条款并且注册', :class => 'btn btn-primary' %>
  <%= link_to("使用第三方账号登录", '', :class => 'btn btn-primary') %> 

<% end %>

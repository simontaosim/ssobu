<%- model_class = User -%>
<div class="page-header">
  <h1><%=I18n.t(:Users) %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(t("user.email")) %></th>
      <th><%= model_class.human_attribute_name(t("user.third_party")) %></th>
      <th><%= model_class.human_attribute_name(t("user.username")) %></th>
      <th><%= model_class.human_attribute_name(t("user.password")) %></th>
      <th><%= model_class.human_attribute_name(t("user.password_confirm")) %></th>
      <th><%= model_class.human_attribute_name(t("user.encrypt_password")) %></th>
      <th><%= model_class.human_attribute_name(t("user.created_at")) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.id, user_path(user) %></td>
        <td><%= user.email %></td>
        <td><%= user.third_party %></td>
        <td><%= user.username %></td>
        <td><%= user.password %></td>
        <td><%= user.password_confirm %></td>
        <td><%= user.encrypt_password %></td>
        <td><%= I18n.l(user.created_at) %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_user_path(user), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      user_path(user),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_user_path,
            :class => 'btn btn-primary' %>
